@model List<Calisan>
@{
    ViewBag.Title = "Çalışanlar";
}
@if (TempData["mesaj"] != null)
{
    <div class="alert alert-success">
        @TempData["mesaj"]
    </div>
}

<div class="d-flex justify-content-between">
    <h1>Çalışanlar</h1>
    <a asp-controller="Calisanlar" asp-action="Yeni" class="btn btn-primary mb-2"> Yeni Çalışan </a>

</div>

<table class="table table-hover">
    <thead>
    <th>Id</th>
    <th>Tam Ad</th>
    <th>Departman</th>
    <th></th>
    
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Id   </td>
            <td> @item.TamAd   </td>
            <td> @item.Departman.Ad </td>
            
            <td class="text-right">
                <a asp-controller="Calisanlar" asp-action="Sil" asp-route-id="@item.Id " class="btn btn-danger">Sil</a>
                <a asp-controller="Calisanlar" asp-action="Duzenle" asp-route-id="@item.Id" class="btn btn-info">Guncelle</a>
            </td>
        </tr>
    }

</table>